<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.piggeh.palmettoscholars.fragments.ContactFragment"
    android:id="@+id/scrollView_home"
    android:clipToPadding="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:scrollbars="vertical"
    android:overScrollMode="always">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"><!--android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"-->

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressbar_loadingContactInfo"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout_contactUs"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:id="@+id/relativeLayout_phoneHeader">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_call"
                    style="@style/ClickableIconTiny"
                    android:layout_margin="16dp"
                    android:layout_centerVertical="true"
                    android:tint="@color/iconsDarkDaynight"
                    android:tintMode="src_in"
                    android:clickable="false"/><!--android:tintMode="src_in"--><!--android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_phoneHeader"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="@string/contact_phone"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_phone_number"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/textView_phoneNumber"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_contact_call"
                android:text="@string/contact_phone_call"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:onClick="contactButtonClicked"
                android:pointerIcon="hand"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividers"
                android:layout_marginStart="72dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:id="@+id/relativeLayout_emailHeader">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_email"
                    style="@style/ClickableIconTiny"
                    android:layout_marginEnd="16dp"
                    android:tint="@color/iconsDarkDaynight"
                    android:tintMode="src_in"
                    android:layout_margin="16dp"
                    android:layout_centerVertical="true"
                    android:clickable="false"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_emailHeader"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="@string/contact_email"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="@dimen/list_item_padding_sides"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_email_address"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/textView_emailAddress"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_contact_email"
                android:text="@string/contact_email_send"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:onClick="contactButtonClicked"
                android:pointerIcon="hand"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividers"
                android:layout_marginStart="72dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout_locationHeader">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_location"
                    style="@style/ClickableIconTiny"
                    android:layout_marginEnd="16dp"
                    android:tint="@color/iconsDarkDaynight"
                    android:tintMode="src_in"
                    android:layout_margin="16dp"
                    android:layout_centerVertical="true"
                    android:clickable="false"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_locationHeader"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="@string/contact_location"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_location_address_street"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/textView_locationStreet"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_location_address_city"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/textView_locationCity"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:paddingBottom="8dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividers"
                android:layout_marginStart="72dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:id="@+id/linearLayout_faxHeader">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_printer"
                    style="@style/ClickableIconTiny"
                    android:layout_marginEnd="16dp"
                    android:tint="@color/iconsDarkDaynight"
                    android:tintMode="src_in"
                    android:layout_margin="16dp"
                    android:layout_centerVertical="true"
                    android:clickable="false"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_faxHeader"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="@string/contact_fax"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_fax_number"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/textView_faxNumber"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:paddingBottom="8dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividers"
                android:layout_marginStart="72dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:id="@+id/linearLayout_twitterHeader">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_twitter"
                    style="@style/ClickableIconTiny"
                    android:layout_marginEnd="16dp"
                    android:tint="@color/iconsDarkDaynight"
                    android:tintMode="src_in"
                    android:layout_margin="16dp"
                    android:layout_centerVertical="true"
                    android:clickable="false"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_twitterHeader"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="@string/contact_twitter"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_twitter_username"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/textView_twitterUsername"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_contact_twitter"
                android:text="@string/contact_social_open"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:onClick="contactButtonClicked"
                android:pointerIcon="hand"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout_facebookHeader"
            android:layout_marginTop="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_twitter"
                style="@style/ClickableIconTiny"
                android:layout_marginEnd="16dp"
                android:tint="@color/icons_dark_daynight_dynamic"
                android:clickable="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_facebookHeader"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:text="@string/contact_facebook"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_twitter_username"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/textView_facebookUsername"
            android:layout_marginTop="8dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_contact_facebook"
            android:text="@string/contact_social_open"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:onClick="contactButtonClicked" />-->

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
