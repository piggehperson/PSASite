<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.piggeh.palmettoscholars.fragments.ContactFragment"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:id="@+id/scrollView_home"
    android:clipToPadding="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:scrollbars="vertical"
    android:overScrollMode="always">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout_phoneHeader">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call"
                style="@style/ClickableIconTiny"
                android:layout_marginEnd="16dp"
                android:tint="@color/iconsDark"
                android:clickable="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_phoneHeader"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:text="@string/contact_phone"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_phone_number"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/textView_phoneNumber"
            android:layout_marginTop="8dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_contact_call"
            android:text="@string/contact_phone_call"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:onClick="contactButtonClicked" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout_emailHeader"
            android:layout_marginTop="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email"
                style="@style/ClickableIconTiny"
                android:layout_marginEnd="16dp"
                android:tint="@color/iconsDark"
                android:clickable="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_emailHeader"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:text="@string/contact_email"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_email_address"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/textView_emailAddress"
            android:layout_marginTop="8dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_contact_email"
            android:text="@string/contact_email_send"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:onClick="contactButtonClicked" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout_locationHeader"
            android:layout_marginTop="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location"
                style="@style/ClickableIconTiny"
                android:layout_marginEnd="16dp"
                android:tint="@color/iconsDark"
                android:clickable="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_locationHeader"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:text="@string/contact_location"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_location_address_street"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/textView_locationStreet"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_location_address_city"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/textView_locationCity"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout_faxHeader"
            android:layout_marginTop="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_printer"
                style="@style/ClickableIconTiny"
                android:layout_marginEnd="16dp"
                android:tint="@color/iconsDark"
                android:clickable="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_faxHeader"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:text="@string/contact_fax"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_fax_number"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/textView_faxNumber"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout_twitterHeader"
            android:layout_marginTop="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_twitter"
                style="@style/ClickableIconTiny"
                android:layout_marginEnd="16dp"
                android:tint="@color/iconsDark"
                android:clickable="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_twitterHeader"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:text="@string/contact_twitter"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_twitter_username"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/textView_twitterUsername"
            android:layout_marginTop="8dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_contact_twitter"
            android:text="@string/contact_social_open"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:onClick="contactButtonClicked" />

