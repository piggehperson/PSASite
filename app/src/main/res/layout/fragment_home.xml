<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.piggeh.palmettoscholars.fragments.HomeFragment"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/scrollView_home"
    android:clipToPadding="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:scrollbars="vertical"
    android:overScrollMode="always">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">
        <ImageView
            android:layout_width="match_parent"
            app:layout_widthPercent="100%"
            app:layout_aspectRatio="178%"
            android:id="@+id/imageView_ourMission"
            android:src="@color/colorAccentLighter"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_missionHeader"
            android:layout_below="@id/imageView_ourMission"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="@string/home_ourmission"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_missionText"
            android:layout_below="@id/textView_missionHeader"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/home_missiontext"/>
    </android.support.percent.PercentRelativeLayout>
</android.support.v4.widget.NestedScrollView>
